<div class="row navigate">

  <ul class="subtitle">
        <li> <%= link_to "Your Projects", navigate_path %> </li>
  	<li> <%= link_to @folder, navigate_path(to_link(@folder)) %></li>
	<li>  <%= link_to "back", navigate_path(parent_link(@parent)) %></li>
  </ul>

</div>

<ul class="row files">

  <% @contents.each do |content| %>
    <li <%= raw content[:is_dir] ? "class='inset blue' " : "class='inset gray'" %> >
      <div> <%= link_to content[:content], content[:link] %> </div>
      <div > 3 new events </div>
      <div> Last viewed 2 months </div>
    </li>
  <% end %>
</ul>
