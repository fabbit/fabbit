
<div class="row header">
	<div class="messageWrapper">
  		<div class="messageDialogue" id="errorMessage">
			Default error message
  		</div>
  		<script>
  			//Error handling UI function
  			function displayError(message){
  				$("#errorMessage").html("ERROR:" + message);
  				$("#errorMessage").fadeIn(600).delay(7000).fadeOut(600);
  			}

  			//Error handling AJAX function - to be used as callback for AJAX errors
			function AJAXerrorHandler(request, textStatus, errorThrown) {
			      console.log(request);
			      var message = (request.status == 403) ? request.responseText : "An unknown error has occured";
			      displayError(message);
			}
  		</script>
  	</div>
  <div class="logo title"> <%= link_to Fabbit, navigate_url %> </div>
	<div class="member"> 
        	<div class="subtitle" id="me"> <%= current_member.name %> </div>
		<ul>
			<li> Notifications </li>
			<li> Logout </li>
		</ul>
		<script>
		$(document).ready(function(){
			$(".header .member .subtitle").click(function(){ $(".header .member ul").slideToggle()});
			$(".navigate .revisions li:first-child").toggle(
				function(){ $(".navigate .revisions").addClass("expanded")}, 
				function(){ $(".navigate .revisions").removeClass("expanded")}
				);
		});
		</script>
	</div>
</div>
