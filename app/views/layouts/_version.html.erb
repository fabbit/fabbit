
 <li class='version'>
 	<div class='dropbox'/> <%= revision[:rev] %> </div>
 	<div class='date'> <%= revision[:modified].to_datetime.strftime('%B %d, %Y') %> </div>
 	<% if revision[:version] != nil %> <!-- Meant to be null check - maybe theres a better way to do this  -->
 		<div class='action marked'> </div>
 		<div class='message'><a href="/versions/ <%= revision[:version].id %> "> <%= revision[:version].details %> </a> </div>
 	<% else %>
 		<div class='action unmarked'> </div>
 		<div class='message'> </div>
 	<% end %>
 </li>



